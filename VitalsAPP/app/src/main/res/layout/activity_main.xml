<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#48C9B0"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_gravity="right">
        <Button
            android:background="#48C9B0"
            android:textColor=	"#566573"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="openSettingsActivity"
            android:gravity="center"
            android:textSize="15dp"
            android:text="settings" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/temperature_during_the_day"
        android:textColor=	"#FFFFFF"
        android:textSize="30dp"
         />
    <com.anychart.AnyChartView
        android:id="@+id/any_chart_view"

        android:layout_width="385dp"
        android:layout_height="400dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

    </com.anychart.AnyChartView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor=	"#FFFFFF"
        android:text="Sunday, July 26"
        android:textSize="30sp" />
    <Button
        android:background="#48C9B0"
        android:textColor=	"#566573"
        android:layout_width="wrap_content"
        android:textSize="20dp"
        android:layout_height="wrap_content"
        android:onClick="openActivity2"
        android:text="Week" />
    <Button
        android:background="#48C9B0"
        android:textColor= "#566573"
        android:layout_width="wrap_content"
        android:textSize="20dp"
        android:layout_height="wrap_content"
        android:onClick="openGoogleMapsActivity"
        android:text="googleMaps" />

</LinearLayout>